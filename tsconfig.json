{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["./packages/*"],
    },
    "typeRoots": [
      "./node_modules/",
      "./node_modules/@types/",
      "./types"
    ],
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "Node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Output */
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,

    /* Types */
    "types": ["vite/client"]
  },
  "include": ["packages/**/*"]
}
